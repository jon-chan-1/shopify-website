{% stylesheet %}

.brand-title {
 font-family: Prompt;
 font-size: 10px;
 font-weight: bold;
 letter-spacing: 1px;
 color: #000000;
 text-align: center;
}

.brand-image {
  position: relative;
  top: 50%;
  left: 50%;
  transform: translate(-50%, -50%);
}

.brand-card-img-box {
  height: 67%;
  overflow: hidden;
}

@media (min-width: 576px) {
  .col-sm-2.brand {
    padding: 2px;
  }
}

@media (max-width: 575.98px) {
  .col-6.brand {
    padding: 6px;
  }
}

.brand-hover-group {
  height: 100%;
}

.brand-hover-group > a > .card.product {
  border-radius: 0px;
}

{% endstylesheet %}

