  max-height: 276px;
  width: 276px;
  overflow: hidden;
  padding-top: 12px;
  padding-bottom: 12px;
}

.long-rectangle {
  max-height: 276px;
  width: 576px;
  overflow: hidden;
  padding-top: 12px;
  padding-bottom: 12px;
}

.tall-rectangle {
  max-height: 576px;
  width: 336px;
  overflow: hidden;
  padding-top: 12px;
  padding-bottom: 12px;
}

.mobile-image {
  height: 276px;
  width: 100%;
  overflow: hidden;
}

.top-left-text {
