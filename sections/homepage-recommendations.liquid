<div class="container">
  <h2 class="homepage-header">Recommendations for you</h2>
  <div class="row d-none d-sm-flex">
    <div class="col-sm-1"></div>
    <div class="col-sm-6">
      <div class="row">
        <div class="col-sm-6 square">
          <a href="{{ section.settings.top_left_url }}">
            <img class="img-fluid" src="{{ section.settings.top_left_image | img_url: "master" }}" alt="{{ section.settings.top_left_alt }}"/>
          </a>
        </div>
        <div class="col-sm-6 square">
          <a href="{{ section.settings.top_center_url }}">
            <img class="img-fluid" src="{{ section.settings.top_center_image | img_url: "master" }}" alt="{{ section.settings.top_center_alt }}"/>
          </a>
        </div>
      </div>
      <div class="row">
        <div class="col-sm-12 long-rectangle">
          <a href="{{ section.settings.bottom_left_url }}">
            <img class="img-fluid" src="{{ section.settings.bottom_left_image | img_url: "master" }}" alt="{{ section.settings.bottom_left_alt }}"/>
          </a>
        </div>
      </div>
    </div>
    <div class="col-sm-4 tall-rectangle">
      <a href="{{ section.settings.right_url }}">
        <img class="img-fluid" src="{{ section.settings.right_image | img_url: "master" }}" alt="{{ section.settings.right_alt }}"/>
      </a>
    </div>
    <div class="col-sm-1"></div>
  </div>
  <div class="row d-sm-none">
    <div class="row mobile-image">
      <a href="{{ section.settings.top_left_url }}">
        <img class="img-fluid" src="{{ section.settings.top_left_image | img_url: "master" }}" alt="{{ section.settings.top_left_alt }}"/>
      </a>
    </div>
    <div class="row mobile-image">
      <a href="{{ section.settings.top_center_url }}">
        <img class="img-fluid" src="{{ section.settings.top_center_image | img_url: "master" }}" alt="{{ section.settings.top_center_alt }}"/>
      </a>
    </div>
    <div class="row mobile-image">
      <a href="{{ section.settings.bottom_left_url }}">
        <img class="img-fluid" src="{{ section.settings.bottom_left_image | img_url: "master" }}" alt="{{ section.settings.bottom_left_alt }}"/>
      </a>
    </div>
    <div class="row mobile-image">
      <a href="{{ section.settings.right_url }}">
        <img class="img-fluid" src="{{ section.settings.right_image | img_url: "master" }}" alt="{{ section.settings.right_alt }}"/>
      </a>
    </div>
  </div>
</div>

